<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customParam="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.vlad1m1r.lemniscate.sample.MainActivity">

    <com.vlad1m1r.lemniscate.BernoullisProgressView
        android:id="@+id/infinityProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_huge"
        android:layout_marginBottom="@dimen/margin_huge"
        android:background="@android:color/background_light"
        customParam:duration="1000"
        customParam:hasHole="false"
        customParam:lineColor="@color/colorPrimary"
        customParam:lineLengthChangeable="true"
        customParam:maxLineLength="0.8"
        customParam:minLineLength="0.4"
        customParam:lineLength="0.6"
        customParam:sizeMultiplier="1"
        customParam:strokeWidth="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strokeWidth"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarStrokeWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/divider"/>

            <CheckBox
                android:id="@+id/checkBoxChangeableLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="@string/isLineLengthChangeable"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lineLength"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarStrokeLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lineMinLength"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarStrokeLengthMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lineMaxLength"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarStrokeLengthMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/divider"/>

            <CheckBox
                android:id="@+id/checkBoxHasHole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hasHole"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/divider"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sizeMultiplier"
                android:layout_marginBottom="@dimen/margin_small"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarSizeMultiplier"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="15"
                android:progress="5"
                android:layout_marginBottom="@dimen/margin_normal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/divider"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarAnimationDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/divider"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precision"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

            <SeekBar
                android:id="@+id/seekBarPrecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
